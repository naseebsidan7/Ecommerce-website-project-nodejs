          <h3 class="mb-5">Add Product </h3>
          <form class="mb-5" method="post" enctype="multipart/form-data" id="contactForm" name="contactForm" action="addProduct">
            <div class="row">
              <div class="col-md-6 form-group mb-3">
                <label for="" class="col-form-label">Product Name *</label>
                <input type="text" class="form-control" name="product_name" id="name" placeholder="Product Name" style="color: rgb(216, 160, 86); font-family: monospace; font-size: larger;" required>
              </div>
              <div class="col-md-6 form-group mb-3">
                <label for="" class="col-form-label">Enter Price *</label>
                <input type="number" class="form-control" name="price" id="email"  placeholder="Enter Price" style="color: rgb(216, 160, 86); font-family: monospace; font-size: larger;" required >
              </div>
            </div>
         
          
            <!-- <div class="col-md-6 form-group mb-3">
