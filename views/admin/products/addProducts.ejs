    } else if (files.length > maxAllowedFiles) {
      imageError.textContent = `You can only upload up to ${maxAllowedFiles} images.`;
    } else {
      let validFiles = true;
      for (const file of files) {
        if (!allowedExtensions.includes(file.name.substr(file.name.lastIndexOf('.')))) {
          validFiles = false;
          break;
        }
      }

      if (validFiles) {
        imageError.textContent = '';
      } else {
        imageError.textContent = 'Invalid file type. Only JPG, JPEG, PNG, and WebP files are allowed.';
      }
    }
  });
